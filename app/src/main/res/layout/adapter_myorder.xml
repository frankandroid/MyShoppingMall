<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/adapter_myorder_tv_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:text="订单号:"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/adapter_myorder_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/adapter_myorder_tv_order"
            android:text="2123123132"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/adapter_myorder_tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="成功"
            android:textSize="14sp" />
    </RelativeLayout>

    <View style="@style/line_horizontal" />

    <com.w4lle.library.NineGridlayout
        android:id="@+id/iv_ngrid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

    <View style="@style/line_horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="实付金额:￥"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/adapter_myorder_tv_sumprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:text="评论晒单"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:text="再次购买"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>